.c-checkbox,
.c-radio
  display inline-block
  text-indent -10000
  width 24px
  height 24px
  background $normal
  border 1px solid $darck
  border-radius 2px
  cursor pointer
  position relative
  margin 0 8px
  vertical-align middle

  &__inp
    display none

  &:hover
    background $light

  &:before
    content ""
    display none
    background #000000
    width 10px
    height 10px
    position absolute
    left 50%
    top 50%
    margin -5px 0 0 -5px
    border-radius 2px

.c-radio
  border-radius 24px

  &:before
    border-radius 10px

.c-radio__inp[type="checkbox"]:checked + label::before,
.c-checkbox__inp[type="checkbox"]:checked + label::before
  display block

.c-radio__inp[type="checkbox"]:disabled + label::before,
.c-checkbox__inp[type="checkbox"]:disabled + label::before
  display block
  opacity .5