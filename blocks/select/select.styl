.c-select
  display inline-block
  position relative
  background $normal
  vertical-align middle
  width 200px
  height 40px

  &:hover
    background $light

  &:before,
  &:after
    position absolute
    content ""
    display block
    right 15px
    top 50%

  &:before
    border 5px solid transparent
    border-top 5px solid black
    margin-top 2px

  &:after
    border 5px solid transparent
    border-bottom 5px solid black
    margin-top -10px

  select
    position absolute
    width 100%
    height 100%
    border 1px solid $darck
    background transparent
    padding 0 30px 0 15px
    font-size 18px
    background-position right center
    background-repeat no-repeat
    line-height 1em
    text-indent 0.01px
    text-overflow ''
    appearance none!important
    &::-ms-expand
      display none
