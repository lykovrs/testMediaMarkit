@import 'node_modules/nib/'
@import 'node_modules/jeet/stylus/jeet/'

global-reset()
//edit()

$light = #f7f7f7
$normal = #e5e5e5
$darck = #cccccc

*
  box-sizing border-box

body
  font-family: Arial, Helvetica, sans-serif
  min-height 1500px

img
  max-width 100%


@import "blocks/directory"
@import "blocks/menu"
@import "blocks/col-menu"
@import "blocks/button"
@import "blocks/c-radio-check"

.contant
  padding 0 48px
  margin auto
  width 1000px

  &__header
    font-size 60px
    line-height 100px

.c-select
  display inline-block
  position relative
  background $normal
  vertical-align middle
  width 200px
  height 40px

  &:hover
    background $light

  &:before,
  &:after
    position absolute
    content ""
    display block
    right 15px
    top 50%

  &:before
    border 5px solid transparent
    border-top 5px solid black
    margin-top 2px

  &:after
    border 5px solid transparent
    border-bottom 5px solid black
    margin-top -10px

  select
    position absolute
    width 100%
    height 100%
    border 1px solid $darck
    background transparent
    padding 0 30px 0 15px
    font-size 18px
    background-position right center
    background-repeat no-repeat
    line-height 1em
    text-indent 0.01px
    text-overflow ''
    appearance none!important
    &::-ms-expand
      display none















