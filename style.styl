@import 'node_modules/nib/'
@import 'node_modules/jeet/stylus/jeet/'

global-reset()
//edit()

$light = #f7f7f7
$normal = #e5e5e5
$darck = #cccccc

*
  box-sizing border-box

body
  font-family: Arial, Helvetica, sans-serif
  min-height 1500px

img
  max-width 100%


@import "blocks/directory"
@import "blocks/menu"
@import "blocks/col-menu"
@import "blocks/button"

.contant
  padding 0 48px
  margin auto
  width 1000px

  &__header
    font-size 60px
    line-height 100px

.c-checkbox,
.c-radio
  display inline-block
  text-indent -10000
  width 24px
  height 24px
  background $normal
  border 1px solid $darck
  border-radius 2px
  cursor pointer
  position relative
  margin 0 8px

  &__inp
    display none

  &:hover
    background $light

  &:before
    content ""
    display none
    background #000000
    width 10px
    height 10px
    position absolute
    left 50%
    top 50%
    margin -5px 0 0 -5px
    border-radius 2px

.c-radio
  border-radius 24px

  &:before
    border-radius 10px

.c-radio__inp[type="checkbox"]:checked + label::before,
.c-checkbox__inp[type="checkbox"]:checked + label::before
  display block

.c-radio__inp[type="checkbox"]:disabled + label::before,
.c-checkbox__inp[type="checkbox"]:disabled + label::before
  display block
  opacity .5












